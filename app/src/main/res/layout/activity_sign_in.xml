<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2E43"
    >


    <Button
        android:id="@+id/signUp"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:background="@drawable/shape"
        android:text="SignUp"
        android:textColor="#ffffff"
        android:layout_alignEnd="@id/password"
        android:layout_marginVertical="393dp">
    </Button>

    <Button
        android:id="@+id/signIn"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_marginVertical="393dp"
        android:background="@drawable/shape"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:layout_marginLeft="24dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="287dp"
        android:layout_height="41dp"
        android:background="@drawable/shape2"
        android:hint="Email"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_marginLeft="23dp"
        android:layout_marginVertical="206dp"></EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="287dp"
        android:layout_height="41dp"
        android:background="@drawable/shape2"
        android:hint="Password"
        android:padding="5dp"
        android:shadowColor="#ffffff"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:layout_marginLeft="23dp"
        android:layout_marginVertical="302dp"></EditText>

    <TextView
        android:id="@+id/textView_smartCity"
        android:layout_width="216dp"
        android:layout_height="188dp"
        android:text="Smart City"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ffffff"
        android:layout_marginLeft="94dp"
        android:layout_marginVertical="18dp">

    </TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Places!"
        android:textColor="#ffffff"
        android:layout_marginLeft="139dp"
        android:layout_marginVertical="81dp">

    </TextView>
    <TextView
        android:id="@+id/forgetPassword"
        android:layout_width="171dp"
        android:layout_height="27dp"
        android:text="Forgot Password?"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginVertical="502dp"></TextView>


    <TextView
        android:id="@+id/Password"
        android:layout_width="171dp"
        android:layout_height="27dp"
        android:text="Password:"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginLeft="23dp"
        android:layout_marginVertical="267dp"></TextView>

    <TextView
        android:id="@+id/Email"
        android:layout_width="171dp"
        android:layout_height="27dp"
        android:text="Email:"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginVertical="162dp"></TextView>


    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:text=""
        android:textColor="@color/colorRed"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginVertical="350dp"
        />

</RelativeLayout>